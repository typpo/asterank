proxy_cache_path  /var/www/cache levels=1:2 keys_zone=my-cache:100m max_size=1000m inactive=600m;
proxy_temp_path /var/www/cache/tmp;

server {
    server_name  asterank.com;
    rewrite ^(.*) http://www.asterank.com$1 permanent;
}

server {
    listen   80;
    server_name www.asterank.com 97.107.131.22;

    location / {
        proxy_pass_header Server;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
        proxy_connect_timeout 40;
        proxy_read_timeout 40;
        proxy_pass http://localhost:9990/;
    }

    location ^\/api\/(.*)$ {
        add_header Access-Control-Allow-Origin *;
    }

    # galaxies
    location /galaxies {
      alias /home/ian/galaxies;
    }

    proxy_cache my-cache;
    proxy_cache_valid 200 302 600m;
    proxy_cache_valid 404 500 1m;
    #add_header X-Cache $upstream_cache_status; # HIT / MISS / BYPASS / EXPIRED
    # what to serve if upstream is not available or crashes
    error_page 500 502 503 504 /media/50x.html;
}
